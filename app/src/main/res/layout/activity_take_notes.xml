<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context=".TakeNotes">
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="62dp">
        <TextView
            android:id="@+id/take_notes_time_code_text_view"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="HH:MM:SS"
            android:textSize="24dp"
            android:gravity="left|center_vertical"/>

        <Button
            android:id="@+id/take_notes_add_note_button"
            android:layout_width="0dip" android:layout_weight="3"
            android:layout_height="fill_parent"
            android:layout_margin="4dp"
            android:text="Add Note"
            android:textSize="14dp"
            android:layout_gravity="right|center_vertical"/>

        <Spinner
            android:id="@+id/take_notes_camera_spinner"
            android:layout_width="0dip" android:layout_weight="3"
            android:layout_height="fill_parent">

            </Spinner>

        </LinearLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/take_notes_list_view"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true" />
</LinearLayout>
