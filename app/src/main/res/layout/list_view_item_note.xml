<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/note_list_item_view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:orientation="vertical"
    android:background="@color/grey_50"
    card_view:cardCornerRadius="0dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingEnd="8dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:id="@+id/list_view_item_note_time_code"
            android:text="HH:MM:SS"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black_54" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/list_view_item_note_camera"
            android:text="C"
            android:textSize="16dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="8dp"
            android:textColor="@color/black_54" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_view_item_note_time_code"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="8dp"
            android:id="@+id/list_view_item_note"
            android:text="This is my really long note for tis particular part of the movie"
            android:textSize="16dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black_87" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingEnd="8dp" >



    </LinearLayout>



</android.support.v7.widget.CardView>