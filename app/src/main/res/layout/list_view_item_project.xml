<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dip" android:layout_weight="4"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center" >

            <TextView
                android:id="@+id/list_view_item_project_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:text="My Project yoyoyoyoyoy"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="left"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="left" >

                <TextView
                    android:id="@+id/list_view_item_project_cameras_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="@string/list_view_project_cameras_label"/>

                <TextView
                    android:id="@+id/list_view_item_project_camera_list"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="\tA, B, C, D, E, F, G"
                    android:singleLine="true"
                    android:ellipsize="end"/>
             </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip" android:layout_weight="2"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/list_view_item_project_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:gravity="right"
                android:text="12-2-14"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>