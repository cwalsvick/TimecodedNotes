<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/project_list_item_view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:orientation="vertical"
    android:background="@color/grey_50">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingEnd="16dp" >

        <TextView
            android:id="@+id/list_view_item_project_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textSize="24sp"
            android:text="My Project yoyoyoyoyoy"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_gravity="start|top"
            android:textColor="@color/black_87" />

        <TextView
            android:id="@+id/list_view_item_project_date"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="8dp"
            android:textSize="16sp"
            android:text="12/2/2014"
            android:gravity="bottom"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/black_54" />

        <TextView
            android:id="@+id/list_view_item_project_camera_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="A, B, C, D, E, F, G"
            android:layout_gravity="center"
            android:textColor="@color/black_87" />
    </LinearLayout>

</android.support.v7.widget.CardView>
